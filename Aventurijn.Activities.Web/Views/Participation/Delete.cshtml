@model Aventurijn.Activities.Web.Models.Domain.Participation

@{
    ViewBag.Title = "Avonturijn - Puntje Verwijderen";
}

<h2>Puntje verwijderen</h2>

<h3>Weet je zeker dat je dit puntje wilt verwijderen?</h3>
<fieldset class="tabular">
    <legend>Deelname</legend>
    
    <div class="row">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Student.Name)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Student.Name)
        </div>
    </div>

     <div class="row">
         <div class="display-label">
             @Html.DisplayNameFor(model => model.Subject.Name)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Subject.Name)
        </div>
    </div>

     <div class="row">
         <div class="display-label">
             @Html.DisplayNameFor(model => model.Activity.Name)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Activity.Name)
        </div>
    </div>

     <div class="row">
        <div class="display-label">
             @Html.DisplayNameFor(model => model.ExtraInfo)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ExtraInfo)
        </div>
    </div>

     <div class="row">
         <div class="display-label">
             @Html.DisplayNameFor(model => model.ParticipationDateTime)
        </div>
         <div class="display-field">
             @Html.DisplayFor(model => model.ParticipationDateTime)
         </div>
      </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Verwijderen" /> |
        @Html.ActionLink("Terug naar lijst", "Index")
    </p>
}
