@model Aventurijn.Activities.Web.Models.Domain.Student

@{
    ViewBag.Title = "Aventurijn - Leerling Verwijderen";
}

<h2>Leerling verwijderen</h2>

<h3>Weet je zeker dat je deze Leerling wilt verwijderen?</h3>
<fieldset class="tabular">
    <legend>Leerling</legend>
    
    <div class="row">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
     <div class="row">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.Insertion)
        </div>
         <div class="display-field">
             @Html.DisplayNameFor(model => model.Insertion)
         </div>
    </div>
     <div class="row">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.LastName)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.LastName)
        </div>
    </div>

    <div class="row">
        <div class="display-label">
            @Html.DisplayNameFor(model => model.BirthDate)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.BirthDate)
        </div>
    </div>

    <div class="row">
         <div class="display-label">
             @Html.DisplayNameFor(model => model.Level)
        </div>
        <div class="display-field">
            @Html.DisplayTextFor(model => model.Level.Name)
        </div>
    </div>
  
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Verwijderen" /> |
        @Html.ActionLink("Terug naar lijst", "Index")
    </p>
}
