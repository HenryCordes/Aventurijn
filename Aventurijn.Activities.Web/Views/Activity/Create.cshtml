@model Aventurijn.Activities.Web.Models.ViewModel.ActivityViewModel

@{
    ViewBag.Title = "Avonturijn - Nieuwe Activiteit";
}

<h2>Nieuwe Activiteit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset class="editor">
        <legend>Activity</legend>

         <div class="editor-label">
            @Html.LabelFor(model => model.Activity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activity.Name)
            @Html.ValidationMessageFor(model => model.Activity.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Activity.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activity.Active)
            @Html.ValidationMessageFor(model => model.Activity.Active)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Activity.CreationDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Activity.CreationDate)
            @Html.ValidationMessageFor(model => model.Activity.CreationDate)
        </div>

        <p>
            <input type="submit" value="Opslaan" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Terug naar lijst", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
