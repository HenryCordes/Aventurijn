@model IEnumerable<Aventurijn.Activities.Web.Models.Domain.Activity>

@{
    ViewBag.Title = "Aventurijn - Activiteiten";
}

<h2>Activiteiten</h2>

<p>
    @Html.ActionLink("Nieuw", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
         <td>
            @Html.DisplayTextFor(modelItem => item.Subject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Aanpassen", "Edit", new { id=item.ActivityId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ActivityId }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.ActivityId })
        </td>
    </tr>
}

</table>
