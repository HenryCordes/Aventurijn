<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta name="robots" content="noindex, nofollow">
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css")
@*        @Scripts.Render("~/bundles/modernizr")*@
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a class="logo" href="/"><p class="site-title"><span class="logo">Aventurijn</span></p></a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="nav"> 
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>  
                            <li><a href="#">Puntjes</a>
                                <ul>
                                    <li>@Html.ActionLink("Alle puntjes", "Index", "Participation")</li>
                                    <li>@Html.ActionLink("Puntjes per Vak", "PerSubject", "Participation")</li>
                                </ul>
                            </li>
                            <li><a href="#">Gegevens</a>
                                <ul>
                                    <li>@Html.ActionLink("Leerlingen", "Index", "Student")</li>
                                    <li>@Html.ActionLink("Activiteiten", "Index", "Activity")</li> 
                                    <li>@Html.ActionLink("Vakken", "Index", "Subject")</li>
                                    <li>@Html.ActionLink("Bouw", "Index", "Level")</li>
                                </ul>
                            </li>    
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>  
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section id="main-content" class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>
                        Aventurijn.org &copy; 2002 - 2013 Stichting Aventurijn - Voorsterweg 1 - 7371 GA Loenen
                    </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/aventurijn")
        @RenderSection("scripts", required: false)
    </body>
</html>
